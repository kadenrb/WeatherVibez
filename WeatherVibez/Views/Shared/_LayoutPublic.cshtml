<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vibe Vault</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrapVapour.css" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
    <!-- Bootstrap icons for more visuals -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <base href="/" />
</head>
<body class="bg-dark-subtle">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark py-2">
            <div class="container">
                <!-- Link to the Home page -->
                <a class="navbar-brand me-4" asp-controller="Home" asp-action="Index">
                    <span class="display-4 mb-4" style="font-family: 'Orbitron', sans-serif; color: #7DF9FF; font-size: 1.8rem">Weather Vibez</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-2">
                            <!-- Link to the Login page -->
                            <a class="nav-link btn btn-outline-primary btn-sm px-3" asp-controller="Home" asp-action="Login">
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <!-- Link to the Create Account page in UsersController -->
                            <a class="nav-link btn btn-primary btn-sm px-3" asp-controller="Users" asp-action="Create">
                                <i class="bi bi-person-plus me-1"></i>
                                Create Account
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="text-center">
                <h4>Weather Vibez</h4>
                <p class="text-muted">The site with the ultimate vibes</p>
            </div>
            <hr class="my-4">
            <div class="text-center text-muted">
                &copy; 2025 Weather Vibez - Kaden, Kris and Mike
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

